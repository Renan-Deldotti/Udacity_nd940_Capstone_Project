<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:layout_marginTop="?attr/actionBarSize">

    <ImageView
        android:id="@+id/navigation_drawer_icon"
        android:layout_width="@dimen/single_item_poster_size"
        android:layout_height="@dimen/single_item_poster_size"
        android:contentDescription="@string/nav_header_description"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_local_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorPrimary" />

    <TextView
        android:id="@+id/navigation_drawer_text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/normal_margin_padding_size"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navigation_drawer_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>